Ingredients: <%= @recipe.ingredients %>

<form action="/recipes/<%= @recipe.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Updated Name: <input type="text" value="<%= @recipe.name %>" name="name">
    Updated Ingredients: <input type="text" value="<%= @recipe.ingredients %>" name="ingredients">
    Updated Cook Time: <input type="text" value="<%= @recipe.cook_time %>" name="cook_time">
    <button type="submit" value="submit">Submit</button>
</form>
